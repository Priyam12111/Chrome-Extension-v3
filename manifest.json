{
    "manifest_version": 3,
    "name": "Active Tab Title",
    "version": "1.38",
    "description": "Displays the title of the active tab in a popup.",
    "action": {
        "default_popup": "popup.html"
    },
    "content_scripts": [
        {
            "matches": [ "*://*.youtube.com/*" ],
            "js": [
                "content.js"
            ]
        }
    ],
    "background": {
        "service_worker": "background.js"
    },
    "permissions": [
        "activeTab",
        "tabs"
    ]
}