{
    "manifest_version": 3,
    "name": "Active Tab Title",
    "version": "1.13",
    "description": "Displays the title of the active tab in a popup.",
    "action": {
        "default_popup": "popup.html"
    },
    "content_scripts": [
        {
            "matches": [ "https://www.youtube.com/watch*" ],
            "js": [
                "content.js"
            ]
        }
    ],
    "permissions": [
        "activeTab",
        "tabs",
        "storage",
        "scripting"
    ],
    "background": {
      "service_worker": "background.js"
    }
}